<h1>Books</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th colspan="3"></th>
    </tr>
  </thead>
</table>

<%= form_with model: @list do |f| %>
  <h2>New book</h2>
  <div class="form">
    <p>Title</p>
    <%= f.text_field :title %>
  </div>

  <div class="form">
    <p>Body</p>
    <%= f.text_area :body %>
  </div>

    <%= f.submit "Create Book" %>

  <% end %>